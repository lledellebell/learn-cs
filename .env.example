# HackerNews 뉴스 수집 환경 변수
# .env 파일로 복사하여 사용하세요 (cp .env.example .env)

# Google Gemini API 키 (요약 생성에 필요)
# https://makersuite.google.com/app/apikey 에서 발급
GEMINI_API_KEY=your_gemini_api_key_here

# 번역 API 키 (선택사항)
TRANSLATE_API_KEY=your_translate_api_key_here

# 요약 생성 활성화 (기본값: true)
ENABLE_SUMMARY=true

# 번역 활성화 (기본값: false)
ENABLE_TRANSLATION=false
